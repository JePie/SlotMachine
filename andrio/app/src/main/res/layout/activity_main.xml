<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jackhuang.slotmachine.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bluecup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b1"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/b5"
        app:layout_constraintEnd_toStartOf="@+id/b2"
        app:layout_constraintStart_toEndOf="@+id/spin"
        app:layout_constraintTop_toBottomOf="@+id/playerAmount" />

    <Button
        android:id="@+id/b2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/b6"
        app:layout_constraintEnd_toStartOf="@+id/b3"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/playerBet" />

    <Button
        android:id="@+id/b3"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:text="10"
        app:layout_constraintBottom_toTopOf="@+id/Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/playerBet" />

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin" />

    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        app:layout_constraintBottom_toTopOf="@+id/playerAmount"
        app:layout_constraintStart_toEndOf="@+id/spin"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/b6"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Reset"
        app:layout_constraintStart_toEndOf="@+id/b5"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b6" />

    <ImageView
        android:id="@+id/slot1"
        android:layout_width="76dp"
        android:layout_height="84dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="149dp"
        app:layout_constraintBottom_toTopOf="@+id/playerAmount"
        app:layout_constraintEnd_toStartOf="@+id/slot2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/slot2"
        android:layout_width="76dp"
        android:layout_height="84dp"
        android:layout_marginBottom="147dp"
        android:layout_marginTop="184dp"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintEnd_toStartOf="@+id/slot3"
        app:layout_constraintStart_toEndOf="@+id/slot1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/slot3"
        android:layout_width="76dp"
        android:layout_height="84dp"
        android:layout_marginBottom="97dp"
        android:layout_marginTop="184dp"
        app:layout_constraintBottom_toTopOf="@+id/playerBet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/slot2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/spin"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="SPIN"
        app:layout_constraintBottom_toTopOf="@+id/b4"
        app:layout_constraintEnd_toStartOf="@+id/b1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerAmount" />

    <TextView
        android:id="@+id/playerAmount"
        android:layout_width="162dp"
        android:layout_height="41dp"
        android:text="Player Amount: "
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/spin"
        app:layout_constraintEnd_toStartOf="@+id/playerBet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slot1" />

    <TextView
        android:id="@+id/playerBet"
        android:layout_width="116dp"
        android:layout_height="44dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="97dp"
        android:text="Bet: "
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playerAmount"
        app:layout_constraintTop_toBottomOf="@+id/slot3" />

    <Button
        android:id="@+id/QuitBtn"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="136dp"
        android:layout_marginStart="246dp"
        android:text="Quit"
        app:layout_constraintBottom_toTopOf="@+id/slot3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentJackpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jackpot: 100000"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="324dp" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:text="msg"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/currentJackpot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slot2" />

</android.support.constraint.ConstraintLayout>
